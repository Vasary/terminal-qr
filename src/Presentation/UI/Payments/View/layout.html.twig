<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title>
    {% block style %}{% endblock %}
    {{ encore_entry_link_tags('bootstrap') }}
</head>
<body>
<main>
    <nav class="py-2 bg-body-tertiary border-bottom">
        <div class="container d-flex flex-wrap">
            <ul class="nav me-auto">
                <li class="nav-item">
                    <a href="{{ path('payments') }}"
                       class="nav-link link-body-emphasis px-2">{{ 'payment.navigation.payment' | trans }}</a>
                </li>
            </ul>
            <ul class="nav">
                <li class="nav-item"><a href="{{ path('logout') }}"
                                        class="nav-link link-body-emphasis px-2">{{ 'payment.navigation.logout' | trans }}</a>
                </li>
            </ul>
        </div>
    </nav>
    {% block content %}{% endblock %}
</main>
{% block javascripts %}{% endblock %}
</body>
</html>
