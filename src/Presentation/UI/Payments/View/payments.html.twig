{% extends '@payments/layout.html.twig' %}

{% block content %}
    <header class="py-3 mb-4 border-bottom">
        <div class="container d-flex flex-wrap justify-content-center">
            <div class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis">
                <span class="fs-4">{{ 'payment.list.title' | trans }}</span>
            </div>
        </div>
        <div class="container">
            {% for store in userStores %}
                <span class="badge text-bg-primary mt-1">{{ store.title }}</span>
            {% endfor %}
        </div>
    </header>

    <div class="py-3 mb-4 border-bottom container d-flex flex-wrap justify-content-center">
        <div class="container">
            {% embed '@component/payments.search.html.twig' with {
                'route': 'payments',
                'order': current.order,
                'orderBy': order,
                'searchValue': searchValue,
                'searchFields': config.searchFields,
            } %}{% endembed %}
        </div>

        <div class="container">
            {% embed '@component/payments.table.html.twig' with {
                'headers': config.headers,
                'items': items.aggregate,
                'route': 'payment',
                'order': current.order,
                'searchValue': searchValue,
                'searchFields': config.searchFields,
            } %}{% endembed %}
        </div>
        <div class="container d-flex flex-wrap justify-content-end">
            {% embed '@component/pagination.html.twig' with {
                'pages': items.pages,
                'route': 'payments',
                'order': order,
                'searchValue': searchValue,
                'searchFields': config.searchFields
            } %}{% endembed %}
        </div>
    </div>
{% endblock %}
