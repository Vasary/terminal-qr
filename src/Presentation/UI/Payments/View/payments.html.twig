{% extends '@payments/layout.html.twig' %}

{% block content %}
    <header class="py-3 mb-4 border-bottom">
        <div class="container d-flex flex-wrap justify-content-center">
            <div class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis">
                <span class="fs-4">{{ 'payment.list.title' | trans }}</span>
            </div>
        </div>
        <div class="container">
        {% for store in userStores %}
            <span class="badge text-bg-primary mt-1">{{ store.title }}</span>
        {% endfor %}
        </div>
    </header>



    <div class="py-3 mb-4 border-bottom container d-flex flex-wrap justify-content-center">
        <form action="{{ path('payments') }}" method="get" class="container">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="searchValue"
                       placeholder="{{ 'payment.button.search' | trans }}"
                       value="{{ searchValue }}"/>
                <button class="btn btn-outline-secondary" type="submit">{{ 'payment.button.search' | trans }}</button>
                <input type="hidden" name="orderBy" value="{{ order }}">
                <input type="hidden" name="page" value="1">
                {% for field in config.searchFields %}
                    <input type="hidden" name="searchFields[]" value="{{ field }}">
                {% endfor %}
            </div>
        </form>

        <div class="container">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('payments', {'page': page,'orderBy': orderBy('createdAt', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">{{ 'payment.attribute.createdAt' | trans }}</a>
                    </th>
                    <th>{{ 'payment.attribute.amount' | trans }}</th>
                    <th>{{ 'payment.attribute.commission' | trans }}</th>
                    <th>{{ 'payment.attribute.status' | trans }}</th>
                    <th>{{ 'payment.attribute.gateway' | trans }}</th>
                    <th>{{ 'payment.attribute.store' | trans }}</th>
                    <th>{{ 'payment.attribute.currency' | trans }}</th>
                    <th>{{ 'payment.attribute.qr.title' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% set id = 1 %}
                {% for item in items.aggregate %}
                    <tr>
                        <td>
                            <a href="{{ path('payment', {'id': item.id}) }}">{{ id }}</a>
                        </td>
                        <td>{{ item.createdAt | date('d.m.Y H:i') }}</td>
                        <td>{{ item.amount | number_format(2, '.', ',') }}</td>
                        <td>{{ item.commission | number_format(2, '.', ',') }}</td>
                        <td>{{ paymentStatus(item) | raw }}</td>
                        <td>{{ item.gateway.title }}</td>
                        <td>{{ item.store.title }}</td>
                        <td>{{ item.currency }}</td>
                        <td>
                            {% if item.qr is not null %}
                                <span class="badge text-bg-success">{{ 'payment.attribute.qr.status.registered' | trans }}</span>
                            {% else %}
                                <span class="badge text-bg-dark">{{ 'payment.attribute.qr.status.absents' | trans }}</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% set id = id + 1 %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="container d-flex flex-wrap justify-content-end">
            <nav>
                {% if items.pages > 1 %}
                    <ul class="pagination">
                        {% for i in 1..items.pages %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('payments', {'page': i,'orderBy': order, 'searchValue': searchValue, 'searchFields': searchFields}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </nav>
        </div>
    </div>
{% endblock %}
