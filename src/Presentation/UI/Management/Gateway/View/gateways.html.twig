{% extends '@management/layout.html.twig' %}


{% block content %}
    <header class="py-3 mb-4 border-bottom">
        <div class="container d-flex flex-wrap justify-content-center">
            <div href="/"
                 class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis">
                <span class="fs-4">List of gateways</span>
            </div>
            <div class="d-flex justify-content-center mb-4 align-items-center mb-3 mb-lg-0 ">
                <a href="{{ path('management_getaway_create') }}" type="button" class="btn btn-primary">New gateway</a>
            </div>
        </div>
    </header>

    <div class="py-3 mb-4 border-bottom container d-flex flex-wrap justify-content-center">
        <form action="{{ path('management_gateways') }}" method="get" class="container">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="searchValue" placeholder="Search"
                       value="{{ searchValue }}"/>
                <button class="btn btn-outline-secondary" type="submit">Search</button>
                <input type="hidden" name="orderBy" value="{{ order }}">
                <input type="hidden" name="page" value="1">
                {% for field in config.searchFields %}
                    <input type="hidden" name="searchFields[]" value="{{ field }}">
                {% endfor %}
            </div>
        </form>

        <div class="container">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('management_gateways', {'page': page,'orderBy': orderBy('title', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">Title</a>
                    </th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('management_gateways', {'page': page,'orderBy': orderBy('host', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">Host</a>
                    </th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('management_gateways', {'page': page,'orderBy': orderBy('portal', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">Portal</a>
                    </th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('management_gateways', {'page': page,'orderBy': orderBy('currency', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">Currency</a>
                    </th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('management_gateways', {'page': page,'orderBy': orderBy('createdAt', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">Created
                            at</a>
                    </th>
                    <th>
                        <a class="text-decoration-none"
                           href="{{ path('management_gateways', {'page': page,'orderBy': orderBy('updatedAt', 'desc', current.order.field, current.order.direction), 'searchValue': searchValue, 'searchFields': searchFields}) }}">Updated
                            at</a>
                    </th>
                    <th colspan="2"></th>
                </tr>
                </thead>
                <tbody>
                {% set id = 1 %}
                {% for item in items.aggregate %}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ item.title }}</td>
                        <td>{{ item.host }}</td>
                        <td>{{ item.portal }}</td>
                        <td>{{ item.currency }}</td>
                        <td>{{ item.createdAt | date('d/m/Y H:i') }}</td>
                        <td>{{ item.updatedAt | date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('management_gateway_edit', {'id': item.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"></path>
                                </svg>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('management_gateway_delete', {'id': item.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                    <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"></path>
                                </svg>
                            </a>
                        </td>
                    </tr>

                    {% set id = id + 1 %}
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="container d-flex flex-wrap justify-content-end">
            <nav>
                {% if items.pages > 1 %}
                    <ul class="pagination">
                        {% for i in 1..items.pages %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path('management_gateways', {'page': i,'orderBy': order, 'searchValue': searchValue, 'searchFields': searchFields}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </nav>
        </div>
    </div>
{% endblock %}
